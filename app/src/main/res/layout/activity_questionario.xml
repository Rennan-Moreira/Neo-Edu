<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.rennan.neoedu.Questionario"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lilTopo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/txtQuestao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Questão 1/3"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtAcertos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acertos 0/3"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtPergunta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Pergunta"
        android:textAlignment="center"
        android:textSize="22sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lilBotao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btnLetraA"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="@color/confirm"
            android:onClick="onClick (Pergunta)"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnLetraB"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="@color/confirm"
            android:onClick="onClick (Pergunta)"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnLetraC"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="@color/confirm"
            android:onClick="onClick (Pergunta)"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnLetraD"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="@color/confirm"
            android:onClick="onClick (Pergunta)"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/proQue"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="500dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="500dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lilResolucao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lilNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnQ1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1ª Q" />

            <Button
                android:id="@+id/btnQ2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2ª Q" />

            <Button
                android:id="@+id/btnQ3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3ª Q" />

            <Button
                android:id="@+id/btnQ4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4ª Q" />

            <Button
                android:id="@+id/btnQ5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5ª Q" />

            <Button
                android:id="@+id/btnQ6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6ª Q" />

            <Button
                android:id="@+id/btnQ7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7ª Q" />

            <Button
                android:id="@+id/btnQ8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8ª Q" />

            <Button
                android:id="@+id/btnQ9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9ª Q" />

            <Button
                android:id="@+id/btnQ10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10ª Q" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lilDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Resolução: 1ª Questão"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text='Enunciado: "Banco de dados é considerado um conjunto de:"'
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text='Alternativa Correta: "Dados Relacionados"'
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Resolução: é uma coleção de dados inter-relacionados, representando informações sobre um domínio específico”, ou seja, sempre que for possível agrupar informações que se relacionam e tratam de um mesmo assunto"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
